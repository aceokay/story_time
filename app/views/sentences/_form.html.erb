<%= render "layouts/errors", :object => @sentence %>

<div class ="form-container">
  <%= form_for [@story, @sentence], :html => {:class => "form-horizontal center"} do |f| %>
    <div class="form-group">
      <%= f.label :ftext, "Title", class: "control-label" %>
        <%= f.text_field :text, class: "form-control" %>
      </div>

    <div class="form-group">
      <%= f.label :fauthor, "Author", class: "control-label" %>
        <%= f.text_field :author, class: "form-control" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-default" %>
  <% end %>
</div>
