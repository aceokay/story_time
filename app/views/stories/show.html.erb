<h1><%= @story.title %></h1>
<p><%= @story.author %>
<p><%= @story.first_sentence %></p>
<% @story.sentences.each do |sentence| %>
  <p><%= sentence.text %></p>
<% end %>

<%= link_to "Add the next sentence!", new_story_sentence_path(@story), class: "btn btn-primary" %>

<hr>
<%= link_to "Home", stories_path, class: "btn btn-primary" %>
<%= link_to "Delete", story_path(@story), :method => "delete", class: "btn btn-primary" %>

<hr>

<ul style="list-style: none">
  <li><h5>Contributors</h5></li>
  <li><%= @story.author %>
  <% @story.sentences.each do |sentence| %>
    <li><%= sentence.author %></li>
  <% end %>
</ul>
